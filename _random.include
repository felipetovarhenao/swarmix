/*
    Return a list of random values between 0 and 1	
*/
list randlist(float n) {
    list y
    float i
    y = {}
    for (i = 0; i < n; i += 1) {
        y[i] = random()
    }
    return y
}

/*
    Shuffles a list in place
*/
list shuffle(list x) {
    float i, j

    // use a list for type-agnostic shuffling
    list tmp
    tmp = {}

    for (i = len(x) - 1; i >= 0; i -= 1) {
        j = fround(random())
        tmp[0] = x[j]
        x[j] = x[i]
        x[i] = tmp[0]
    }
    return x
}